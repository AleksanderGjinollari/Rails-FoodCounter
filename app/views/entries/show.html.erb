<% content_for :title do %>
  <%= @entry.meal_type %> &ndash; <%= DateTime.now.to_fs(:nice_date)%>
<% end %>


<div class="columns mt-6 is-centered">
  <div class="columns is-one-third">
    <nav class="panel is-link">
      <p class="panel-heading">
        Meal type:
        <%= @entry.meal_type %>
      </p>
      <% if @entry != @entry.meal_type %>
        <%= render @entry %>
      <%end%>
    </nav>
  </div>
</div>


<div>
  <%= link_to "Edit this entry", edit_entry_path(@entry) %> |
  <%= link_to "Back to entries", entries_path %>

  <%= button_to "Destroy this entry", @entry, method: :delete %>
</div>
