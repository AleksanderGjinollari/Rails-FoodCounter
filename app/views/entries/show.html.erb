<% content_for :title do %>
  <%= @entry.meal_type %> &ndash; <%= DateTime.now.to_fs(:nice_date)%>
<% end %>


<div class="columns mt-6 is-centered">
  <div class="columns is-one-third">
    <nav class="panel is-link">
      <p class="panel-heading">
        Meal type:
        <%= @entry.meal_type %>
      </p>

      <div class="panel-block">
        Calories: <%= @entry.calories %>
      </div>

      <div class="panel-block">
        Proteins: <%= @entry.proteins %>
      </div>

      <div class="panel-block">
        carbohydrates: <%= @entry.carbohydrates %>
      </div>

      <div class="panel-block">
        Fats: <%= @entry.fats %>
      </div>


      <div class="columns is-mobile">
        <div class="column">
          <%= link_to "Edit this entry", edit_entry_path(@entry), class: "button is-primary" %>
          <%= button_to "Delete", @entry, method: :delete, class: "button is-danger" %>
        </div>
      </div>
    </nav>
  </div>
</div>
